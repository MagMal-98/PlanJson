<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PickPlanFragment">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Plan"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/department_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Department"
        android:textSize="16sp"
        android:layout_gravity="center"
        />

    <Spinner
        android:id="@+id/department_spinner"
        android:layout_width="350dp"
        android:layout_height="25sp"
        android:layout_marginTop="15dp"
        android:scrollbarSize="14dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/field_of_study_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Field of study"
        android:textSize="16sp"
        android:layout_gravity="center" />

    <Spinner
        android:id="@+id/field_of_study_spinner"
        android:layout_width="350dp"
        android:layout_height="25sp"
        android:layout_marginTop="15dp"
        android:scrollbarSize="14dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/semester_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Semester"
        android:textSize="16sp"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/semester_spinner"
        android:layout_width="350dp"
        android:layout_height="25sp"
        android:layout_marginTop="15dp"
        android:scrollbarSize="14dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/group_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Group"
        android:textSize="16sp"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/group_spinner"
        android:layout_width="350dp"
        android:layout_height="25sp"
        android:layout_marginTop="10dp"
        android:scrollbarSize="14dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/subgroup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Subgroup"
        android:textSize="16sp"
        android:layout_gravity="center" />

    <Spinner
        android:id="@+id/subgroup_spinner"
        android:layout_width="350dp"
        android:layout_height="25sp"
        android:layout_marginTop="15dp"
        android:scrollbarSize="14dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/add_plan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:text="Add Plan"
        android:layout_gravity="center"/>

</LinearLayout>